<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<faces-config>
	
	<component>
		<component-type>net.sf.jsfcomp.clientvalidators.requiredfieldvalidator</component-type>
		<component-class>
			net.sf.jsfcomp.clientvalidators.requiredfieldvalidator.RequiredFieldValidator
		</component-class>
	</component>

	<component>
		<component-type>net.sf.jsfcomp.clientvalidators.rangevalidator</component-type>
		<component-class>
			net.sf.jsfcomp.clientvalidators.rangevalidator.RangeValidator
		</component-class>
	</component>

	<component>
		<component-type>net.sf.jsfcomp.clientvalidators.comparevalidator</component-type>
		<component-class>
			net.sf.jsfcomp.clientvalidators.comparevalidator.CompareValidator
		</component-class>
	</component>

	<component>
		<component-type>net.sf.jsfcomp.clientvalidators.regularexpressionvalidator</component-type>
		<component-class>
			net.sf.jsfcomp.clientvalidators.regularexpressionvalidator.RegularExpressionValidator
		</component-class>
	</component>

	<component>
		<component-type>net.sf.jsfcomp.clientvalidators.validationsummary</component-type>
		<component-class>
			net.sf.jsfcomp.clientvalidators.validationsummary.ValidationSummary
		</component-class>
	</component>

	<component>
		<component-type>net.sf.jsfcomp.clientvalidators.scriptgenerator</component-type>
		<component-class>
			net.sf.jsfcomp.clientvalidators.scriptgenerator.ScriptGenerator
		</component-class>
	</component>
	
	<component>
		<component-type>net.sf.jsfcomp.clientvalidators.lengthvalidator</component-type>
		<component-class>
			net.sf.jsfcomp.clientvalidators.lengthvalidator.LengthValidator
		</component-class>
	</component>
	
	<component>
		<component-type>net.sf.jsfcomp.clientvalidators.customvalidator</component-type>
		<component-class>
			net.sf.jsfcomp.clientvalidators.customvalidator.CustomValidator
		</component-class>
	</component>
	
	<lifecycle>
      <phase-listener>net.sf.jsfcomp.clientvalidators.ValidatorResourceLoader</phase-listener>
   </lifecycle>
	
</faces-config>
